<div class="container-fluid">
<p class="error_message" style="text-align:center"><%= @patient.errors.full_messages.join(', ') %></p>
<%= form_for @patient do |f| %>
  <div class="form-group">
  <%= f.label :first_name, "Nombre:", class: "col-md-3 control-label" %>
  <div class="col-md-9">
  <%= f.text_field :first_name, class: "form-control" %>
  </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "Apellido:", class: "col-md-3 control-label"  %>
    <div class="col-md-9">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :birth_date, "Fecha de Nacimiento:", class: "col-md-3 control-label"  %>
    <div class="col-md-9">
    <%= f.date_field :birth_date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, "Sexo:", class: "col-md-3 control-label"  %>
    <div class="col-md-9">
    <%= f.text_field :gender, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, "Dirección:", class: "col-md-3 control-label"  %>
    <div class="col-md-9">
    <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_appointment, "Fecha de Última Cita:", class: "col-md-3 control-label"  %>
    <div class="col-md-9">
    <%= f.date_field :last_appointment, class: "form-control" %>
    </div>
  </div>
  <div style="display:none">
    <%= f.label :user_id %>
    <%= f.number_field :user_id, value: current_user.id  %>
  </div>
  <br>
  <div class="container col-xs-12">
  <%= f.submit "Guardar", class: "btn btn-default btn-primary pull-right"  %>
  </div>
<% end %>

</div>
